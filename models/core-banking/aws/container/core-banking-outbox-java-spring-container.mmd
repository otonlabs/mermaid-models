    Person(Correntista, "Correntista", "Cliente com conta corrente")

    Container_Boundary(cb0, "Core Banking Platform") {
        Container(Core_Banking_svc, "Core Banking Service", "Spring Boot 3", "Servico principal rodando em ECS Fargate", $sprite="img:https://icon.icepanel.io/AWS/svg/Containers/Elastic-Container-Service.svg")
        Container(outbox_handler, "Outbox Handler", "Spring WebFlux", "Garante publicacao confiavel de mensagens via transactional outbox nos containers de plataforma core banking", $sprite="img:https://icon.icepanel.io/AWS/svg/Containers/Elastic-Kubernetes-Service.svg")
