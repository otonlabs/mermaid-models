C4Container
    title Core Banking - Bulkhead Pattern Container View [GCP / Go / gRPC]

    Person(Correntista, "Correntista", "Cliente com conta corrente")

    Container_Boundary(cb0, "Core Banking Platform") {
        Container(Core_Banking_svc, "Core Banking Service", "Gin", "Servico principal rodando em Cloud Run", $sprite="img:https://icon.icepanel.io/GCP/svg/Compute/Cloud-Run.svg")
        Container(bulkhead_handler, "Bulkhead Handler", "gRPC + REST Gateway", "Isola recursos criticos para prevenir falhas em cascata nos containers de plataforma core banking", $sprite="img:https://icon.icepanel.io/GCP/svg/Containers/Google-Kubernetes-Engine.svg")
        ContainerQueue(event_q, "Domain Events", "Cloud Tasks", "Canal de eventos do dominio", $sprite="img:https://icon.icepanel.io/GCP/svg/App-Integration/Cloud-Tasks.svg")
        ContainerDb(main_db, "Primary Database", "Cloud SQL", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/GCP/svg/Databases/Cloud-SQL.svg")
        ContainerDb(cache, "Cache Layer", "Memorystore Redis", "Cache de consultas frequentes", $sprite="img:https://icon.icepanel.io/GCP/svg/Databases/Memorystore.svg")
        ContainerDb(pattern_db, "Pattern State Store", "Firestore", "Estado do padrao bulkhead", $sprite="img:https://icon.icepanel.io/GCP/svg/Databases/Firestore.svg")
    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/GCP/svg/API-Management/Apigee-API-Management.svg")
        Container(ory_kratos, "Ory Kratos", "Go", "Identity management: registration, login, MFA, sessions", $sprite="img:https://icon.icepanel.io/GCP/svg/Security/Cloud-IAM.svg")
        Container(ory_keto, "Ory Keto", "Go", "Permissions (Zanzibar): relation tuples, check/expand API", $sprite="img:https://icon.icepanel.io/GCP/svg/Security/Secret-Manager.svg")
        Container(opa_sidecar, "OPA Policy Engine", "OPA + Rego", "Policy as Code para authorization e compliance")
        ContainerDb(identity_db, "Identity Store", "Cloud SQL", "Identidades, sessions, credentials")
        ContainerDb(keto_db, "Keto Store", "Cloud SQL", "Relation tuples e namespaces")
    }

    Container_Boundary(obs0, "Observability Layer") {
        Container(dd_agent, "Datadog Agent", "DaemonSet", "Coleta metricas, traces e logs de todos os containers", $sprite="img:https://icon.icepanel.io/GCP/svg/Operations/Cloud-Monitoring.svg")
        Container(dd_apm, "APM Tracer", "dd-trace-go", "Distributed tracing com auto-instrumentacao")
        Container(dd_logs, "Log Forwarder", "Datadog Agent", "Coleta e envia logs para Datadog Log Management")
    }

    System_Ext(CIP, "CIP", "Camara Interbancaria de Pagamentos")
    System_Ext(BACEN, "BACEN", "Banco Central do Brasil")
    System_Ext(ory_hydra, "Ory Hydra", "OAuth 2.0 & OpenID Connect Server (FAPI)")
    System_Ext(datadog_platform, "Datadog Platform", "SaaS: APM, Logs, Metrics, Dashboards, Alerts")

    Rel(Correntista, ory_oathkeeper, "Acessa via proxy", "HTTPS")
    Rel(ory_oathkeeper, ory_kratos, "Valida session", "HTTPS")
    Rel(ory_oathkeeper, Core_Banking_svc, "Roteia autenticado", "HTTPS")
    Rel(Core_Banking_svc, ory_keto, "Verifica permissao", "gRPC")
    Rel(Core_Banking_svc, opa_sidecar, "Avalia policy", "localhost:8181")
    Rel(ory_kratos, ory_hydra, "Emite tokens OAuth2", "HTTPS")
    Rel(ory_kratos, identity_db, "Persiste identidades", "Cloud SQL")
    Rel(ory_keto, keto_db, "Persiste relation tuples", "Cloud SQL")
    Rel(Core_Banking_svc, dd_apm, "Envia traces", "localhost:8126")
    Rel(Core_Banking_svc, dd_agent, "Envia metricas", "localhost:8125/DogStatsD")
    Rel(dd_agent, datadog_platform, "Forwarda telemetria", "HTTPS")
    Rel(dd_logs, datadog_platform, "Forwarda logs", "HTTPS")
    Rel(Core_Banking_svc, bulkhead_handler, "Delega para padrao", "gRPC + REST Gateway")
    Rel(bulkhead_handler, event_q, "Emite eventos", "Cloud Tasks")
    Rel(Core_Banking_svc, main_db, "Persiste dados", "Cloud SQL")
    Rel(bulkhead_handler, pattern_db, "Armazena estado", "Firestore")
    Rel(Core_Banking_svc, cache, "Consulta cache", "Memorystore Redis")
    Rel(Core_Banking_svc, CIP, "Integra com", "HTTPS/mTLS")

