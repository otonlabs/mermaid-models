C4Container
    title Event Driven - Bulkhead Pattern Container View [Oracle Cloud / Go / gRPC]

    Person(Developer, "Developer", "Desenvolvedor de microservicos")

    Container_Boundary(cb0, "Event Driven Platform") {
        Container(Event_Driven_svc, "Event Driven Service", "Gin", "Servico principal rodando em OKE", $sprite="img:https://icon.icepanel.io/OCI/svg/Developer-Services/Container-Engine-for-Kubernetes.svg")
        Container(bulkhead_handler, "Bulkhead Handler", "gRPC + REST Gateway", "Isola recursos criticos para prevenir falhas em cascata nos containers de arquitetura event-driven", $sprite="img:https://icon.icepanel.io/OCI/svg/Developer-Services/Container-Engine-for-Kubernetes.svg")
        ContainerQueue(event_q, "Domain Events", "OCI Queue", "Canal de eventos do dominio", $sprite="img:https://icon.icepanel.io/OCI/svg/Developer-Services/Queue.svg")
        ContainerDb(main_db, "Primary Database", "Autonomous Database", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/OCI/svg/Oracle-Database/Autonomous-Database.svg")
        ContainerDb(cache, "Cache Layer", "OCI Cache Redis", "Cache de consultas frequentes", $sprite="img:https://icon.icepanel.io/OCI/svg/Developer-Services/Cache.svg")
        ContainerDb(pattern_db, "Pattern State Store", "OCI NoSQL", "Estado do padrao bulkhead", $sprite="img:https://icon.icepanel.io/OCI/svg/Oracle-Database/NoSQL-Database.svg")
    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/OCI/svg/Developer-Services/API-Gateway.svg")
        Container(ory_kratos, "Ory Kratos", "Go", "Identity management: registration, login, MFA, sessions", $sprite="img:https://icon.icepanel.io/OCI/svg/Identity-Security/Identity-and-Access-Management.svg")
        Container(ory_keto, "Ory Keto", "Go", "Permissions (Zanzibar): relation tuples, check/expand API", $sprite="img:https://icon.icepanel.io/OCI/svg/Security/Vault.svg")
        Container(opa_sidecar, "OPA Policy Engine", "OPA + Rego", "Policy as Code para authorization e compliance")
        ContainerDb(identity_db, "Identity Store", "Autonomous Database", "Identidades, sessions, credentials")
        ContainerDb(keto_db, "Keto Store", "Autonomous Database", "Relation tuples e namespaces")
    }

    Container_Boundary(obs0, "Observability Layer") {
        Container(dd_agent, "Datadog Agent", "DaemonSet", "Coleta metricas, traces e logs de todos os containers", $sprite="img:https://icon.icepanel.io/OCI/svg/Observability-Management/Monitoring.svg")
        Container(dd_apm, "APM Tracer", "dd-trace-go", "Distributed tracing com auto-instrumentacao")
        Container(dd_logs, "Log Forwarder", "Datadog Agent", "Coleta e envia logs para Datadog Log Management")
    }

    System_Ext(Producer_Services, "Producer Services", "Servicos produtores de eventos")
    System_Ext(Consumer_Services, "Consumer Services", "Servicos consumidores")
    System_Ext(ory_hydra, "Ory Hydra", "OAuth 2.0 & OpenID Connect Server (FAPI)")
    System_Ext(datadog_platform, "Datadog Platform", "SaaS: APM, Logs, Metrics, Dashboards, Alerts")

    Rel(Developer, ory_oathkeeper, "Acessa via proxy", "HTTPS")
    Rel(ory_oathkeeper, ory_kratos, "Valida session", "HTTPS")
    Rel(ory_oathkeeper, Event_Driven_svc, "Roteia autenticado", "HTTPS")
    Rel(Event_Driven_svc, ory_keto, "Verifica permissao", "gRPC")
    Rel(Event_Driven_svc, opa_sidecar, "Avalia policy", "localhost:8181")
    Rel(ory_kratos, ory_hydra, "Emite tokens OAuth2", "HTTPS")
    Rel(ory_kratos, identity_db, "Persiste identidades", "Autonomous Database")
    Rel(ory_keto, keto_db, "Persiste relation tuples", "Autonomous Database")
    Rel(Event_Driven_svc, dd_apm, "Envia traces", "localhost:8126")
    Rel(Event_Driven_svc, dd_agent, "Envia metricas", "localhost:8125/DogStatsD")
    Rel(dd_agent, datadog_platform, "Forwarda telemetria", "HTTPS")
    Rel(dd_logs, datadog_platform, "Forwarda logs", "HTTPS")
    Rel(Event_Driven_svc, bulkhead_handler, "Delega para padrao", "gRPC + REST Gateway")
    Rel(bulkhead_handler, event_q, "Emite eventos", "OCI Queue")
    Rel(Event_Driven_svc, main_db, "Persiste dados", "Autonomous Database")
    Rel(bulkhead_handler, pattern_db, "Armazena estado", "OCI NoSQL")
    Rel(Event_Driven_svc, cache, "Consulta cache", "OCI Cache Redis")
    Rel(Event_Driven_svc, Producer_Services, "Integra com", "HTTPS/mTLS")

