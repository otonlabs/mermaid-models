    title Treasury - Hexagonal Architecture Container View [Azure / Node.js / NestJS]

    Person(Tesoureiro, "Tesoureiro", "Tesoureiro da instituicao")

    Container_Boundary(cb0, "Treasury Platform") {
        Container(Treasury_svc, "Treasury Service", "NestJS", "Servico principal rodando em App Service", $sprite="img:https://icon.icepanel.io/Azure/svg/Compute/App-Services.svg")
        Container(hexagonal_handler, "Hexagonal Handler", "NestJS REST", "Ports and Adapters para isolamento de dominio nos containers de gestao de tesouraria", $sprite="img:https://icon.icepanel.io/Azure/svg/Containers/Kubernetes-Services.svg")
        ContainerQueue(event_q, "Domain Events", "Service Bus Queue", "Canal de eventos do dominio", $sprite="img:https://icon.icepanel.io/Azure/svg/Integration/Service-Bus.svg")
        ContainerDb(main_db, "Primary Database", "Azure SQL Database", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/Azure/svg/Databases/SQL-Database.svg")
