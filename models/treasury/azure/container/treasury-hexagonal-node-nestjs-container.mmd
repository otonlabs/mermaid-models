    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/Azure/svg/Integration/API-Management-Services.svg")
        Container(ory_kratos, "Ory Kratos", "Go", "Identity management: registration, login, MFA, sessions", $sprite="img:https://icon.icepanel.io/Azure/svg/Identity/Entra-ID.svg")
        Container(ory_keto, "Ory Keto", "Go", "Permissions (Zanzibar): relation tuples, check/expand API", $sprite="img:https://icon.icepanel.io/Azure/svg/Security/Key-Vaults.svg")
        Container(opa_sidecar, "OPA Policy Engine", "OPA + Rego", "Policy as Code para authorization e compliance")
        ContainerDb(identity_db, "Identity Store", "Azure SQL Database", "Identidades, sessions, credentials")
        ContainerDb(keto_db, "Keto Store", "Azure SQL Database", "Relation tuples e namespaces")
    }

    Container_Boundary(obs0, "Observability Layer") {
        Container(dd_agent, "Datadog Agent", "DaemonSet", "Coleta metricas, traces e logs de todos os containers", $sprite="img:https://icon.icepanel.io/Azure/svg/Management-Governance/Monitor.svg")
        Container(dd_apm, "APM Tracer", "dd-trace-js", "Distributed tracing com auto-instrumentacao")
        Container(dd_logs, "Log Forwarder", "Datadog Agent", "Coleta e envia logs para Datadog Log Management")
    }

    System_Ext(BACEN_STR, "BACEN STR", "Sistema de Transferencia de Reservas")
    System_Ext(Bloomberg_Terminal, "Bloomberg Terminal", "Terminal de dados de mercado")
    System_Ext(ory_hydra, "Ory Hydra", "OAuth 2.0 & OpenID Connect Server (FAPI)")
    System_Ext(datadog_platform, "Datadog Platform", "SaaS: APM, Logs, Metrics, Dashboards, Alerts")

