    Rel(PIX_DICT_svc, dd_apm, "Envia traces", "localhost:8126")
    Rel(PIX_DICT_svc, dd_agent, "Envia metricas", "localhost:8125/DogStatsD")
    Rel(dd_agent, datadog_platform, "Forwarda telemetria", "HTTPS")
    Rel(dd_logs, datadog_platform, "Forwarda logs", "HTTPS")
    Rel(PIX_DICT_svc, main_q, "Publica mensagens", "Cloud Tasks")
    Rel(main_q, message_translator_proc, "Consome e processa", "Async")
    Rel(message_translator_proc, pattern_q, "Roteia para canal", "Pub/Sub")
    Rel(message_translator_proc, main_db, "Persiste resultado", "Cloud SQL")
