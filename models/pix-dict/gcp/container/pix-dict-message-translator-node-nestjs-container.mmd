C4Container
    title Transformacao de Mensagens DICT com Message Translator [GCP / Node.js / NestJS]

    Person(Correntista, "Correntista", "Cliente que registra e gerencia chaves PIX")

    Container_Boundary(cb0, "PIX DICT Platform") {
        Container(PIX_DICT_svc, "PIX DICT Service", "NestJS", "Servico principal rodando em Cloud Run", $sprite="img:https://icon.icepanel.io/GCP/svg/Compute/Cloud-Run.svg")
        Container(message_translator_proc, "Message Translator Processor", "Bull + NestJS Microservices", "Conversao entre formato interno e XML DICT do BACEN via canonical model", $sprite="img:https://icon.icepanel.io/GCP/svg/Compute/Cloud-Functions.svg")
        ContainerQueue(main_q, "Cloud Tasks Queue", "Cloud Tasks", "Canal de mensagens principal", $sprite="img:https://icon.icepanel.io/GCP/svg/App-Integration/Cloud-Tasks.svg")
        ContainerQueue(pattern_q, "Message Translator Channel", "Pub/Sub", "Canal do padrao EIP", $sprite="img:https://icon.icepanel.io/GCP/svg/Analytics/Pub-Sub.svg")
        ContainerDb(main_db, "Primary Database", "Cloud SQL", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/GCP/svg/Databases/Cloud-SQL.svg")
        ContainerDb(cache, "Cache Layer", "Memorystore Redis", "Cache de consultas frequentes", $sprite="img:https://icon.icepanel.io/GCP/svg/Databases/Memorystore.svg")
    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/GCP/svg/API-Management/Apigee-API-Management.svg")
