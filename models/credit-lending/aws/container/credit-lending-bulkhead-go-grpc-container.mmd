C4Container
    title Credit Lending - Bulkhead Pattern Container View [AWS / Go / gRPC]

    Person(Solicitante, "Solicitante", "Pessoa solicitando credito")

    Container_Boundary(cb0, "Credit Lending Platform") {
        Container(Credit_Lending_svc, "Credit Lending Service", "Gin", "Servico principal rodando em ECS Fargate", $sprite="img:https://icon.icepanel.io/AWS/svg/Containers/Elastic-Container-Service.svg")
        Container(bulkhead_handler, "Bulkhead Handler", "gRPC + REST Gateway", "Isola recursos criticos para prevenir falhas em cascata nos containers de credito e emprestimos", $sprite="img:https://icon.icepanel.io/AWS/svg/Containers/Elastic-Kubernetes-Service.svg")
        ContainerQueue(event_q, "Domain Events", "SQS", "Canal de eventos do dominio", $sprite="img:https://icon.icepanel.io/AWS/svg/App-Integration/Simple-Queue-Service.svg")
        ContainerDb(main_db, "Primary Database", "Aurora PostgreSQL", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/AWS/svg/Database/Aurora.svg")
        ContainerDb(cache, "Cache Layer", "ElastiCache Redis", "Cache de consultas frequentes", $sprite="img:https://icon.icepanel.io/AWS/svg/Database/ElastiCache.svg")
        ContainerDb(pattern_db, "Pattern State Store", "DynamoDB", "Estado do padrao bulkhead", $sprite="img:https://icon.icepanel.io/AWS/svg/Database/DynamoDB.svg")
    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/AWS/svg/Networking-Content-Delivery/API-Gateway.svg")
        Container(ory_kratos, "Ory Kratos", "Go", "Identity management: registration, login, MFA, sessions", $sprite="img:https://icon.icepanel.io/AWS/svg/Security-Identity-Compliance/Cognito.svg")
        Container(ory_keto, "Ory Keto", "Go", "Permissions (Zanzibar): relation tuples, check/expand API", $sprite="img:https://icon.icepanel.io/AWS/svg/Security-Identity-Compliance/Secrets-Manager.svg")
        Container(opa_sidecar, "OPA Policy Engine", "OPA + Rego", "Policy as Code para authorization e compliance")
        ContainerDb(identity_db, "Identity Store", "Aurora PostgreSQL", "Identidades, sessions, credentials")
        ContainerDb(keto_db, "Keto Store", "Aurora PostgreSQL", "Relation tuples e namespaces")
    }

    Container_Boundary(obs0, "Observability Layer") {
        Container(dd_agent, "Datadog Agent", "DaemonSet", "Coleta metricas, traces e logs de todos os containers", $sprite="img:https://icon.icepanel.io/AWS/svg/Management-Governance/CloudWatch.svg")
        Container(dd_apm, "APM Tracer", "dd-trace-go", "Distributed tracing com auto-instrumentacao")
        Container(dd_logs, "Log Forwarder", "Datadog Agent", "Coleta e envia logs para Datadog Log Management")
    }

    System_Ext(Bureau_Credito_SCR, "Bureau Credito SCR", "Sistema de informacoes de credito BACEN")
    System_Ext(BACEN_SCR, "BACEN SCR", "Central de risco do BACEN")
    System_Ext(ory_hydra, "Ory Hydra", "OAuth 2.0 & OpenID Connect Server (FAPI)")
    System_Ext(datadog_platform, "Datadog Platform", "SaaS: APM, Logs, Metrics, Dashboards, Alerts")

    Rel(Solicitante, ory_oathkeeper, "Acessa via proxy", "HTTPS")
    Rel(ory_oathkeeper, ory_kratos, "Valida session", "HTTPS")
    Rel(ory_oathkeeper, Credit_Lending_svc, "Roteia autenticado", "HTTPS")
