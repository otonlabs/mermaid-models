    Rel(ory_keto, keto_db, "Persiste relation tuples", "Aurora PostgreSQL")
    Rel(Credit_Lending_svc, dd_apm, "Envia traces", "localhost:8126")
    Rel(Credit_Lending_svc, dd_agent, "Envia metricas", "localhost:8125/DogStatsD")
    Rel(dd_agent, datadog_platform, "Forwarda telemetria", "HTTPS")
    Rel(dd_logs, datadog_platform, "Forwarda logs", "HTTPS")
    Rel(Credit_Lending_svc, bulkhead_handler, "Delega para padrao", "gRPC + REST Gateway")
    Rel(bulkhead_handler, event_q, "Emite eventos", "SQS")
    Rel(Credit_Lending_svc, main_db, "Persiste dados", "Aurora PostgreSQL")
    Rel(bulkhead_handler, pattern_db, "Armazena estado", "DynamoDB")
    Rel(Credit_Lending_svc, cache, "Consulta cache", "ElastiCache Redis")
    Rel(Credit_Lending_svc, Bureau_Credito_SCR, "Integra com", "HTTPS/mTLS")

