C4Container
    title Consulta Multi-Fonte para Decisao MED [AWS / Go / gRPC]

    Person(Vitima, "Vitima", "Correntista vitima de fraude ou falha operacional")

    Container_Boundary(cb0, "PIX MED Platform") {
        Container(PIX_MED_svc, "PIX MED Service", "Gin", "Servico principal rodando em ECS Fargate", $sprite="img:https://icon.icepanel.io/AWS/svg/Containers/Elastic-Container-Service.svg")
        Container(scatter_gather_proc, "Scatter Gather Processor", "Watermill", "Scatter para anti-fraude, bureau de credito e historico transacional em paralelo", $sprite="img:https://icon.icepanel.io/AWS/svg/Compute/Lambda.svg")
        ContainerQueue(main_q, "SQS Queue", "SQS", "Canal de mensagens principal", $sprite="img:https://icon.icepanel.io/AWS/svg/App-Integration/Simple-Queue-Service.svg")
        ContainerQueue(pattern_q, "Scatter Gather Channel", "SNS", "Canal do padrao EIP", $sprite="img:https://icon.icepanel.io/AWS/svg/App-Integration/Simple-Notification-Service.svg")
        ContainerDb(main_db, "Primary Database", "Aurora PostgreSQL", "Armazenamento principal do dominio", $sprite="img:https://icon.icepanel.io/AWS/svg/Database/Aurora.svg")
        ContainerDb(cache, "Cache Layer", "ElastiCache Redis", "Cache de consultas frequentes", $sprite="img:https://icon.icepanel.io/AWS/svg/Database/ElastiCache.svg")
    }

    Container_Boundary(sec0, "Security Layer") {
        Container(ory_oathkeeper, "Ory Oathkeeper", "Go", "Zero Trust proxy: authenticators, authorizers, mutators", $sprite="img:https://icon.icepanel.io/AWS/svg/Networking-Content-Delivery/API-Gateway.svg")
        Container(ory_kratos, "Ory Kratos", "Go", "Identity management: registration, login, MFA, sessions", $sprite="img:https://icon.icepanel.io/AWS/svg/Security-Identity-Compliance/Cognito.svg")
        Container(ory_keto, "Ory Keto", "Go", "Permissions (Zanzibar): relation tuples, check/expand API", $sprite="img:https://icon.icepanel.io/AWS/svg/Security-Identity-Compliance/Secrets-Manager.svg")
        Container(opa_sidecar, "OPA Policy Engine", "OPA + Rego", "Policy as Code para authorization e compliance")
        ContainerDb(identity_db, "Identity Store", "Aurora PostgreSQL", "Identidades, sessions, credentials")
        ContainerDb(keto_db, "Keto Store", "Aurora PostgreSQL", "Relation tuples e namespaces")
    }

    Container_Boundary(obs0, "Observability Layer") {
        Container(dd_agent, "Datadog Agent", "DaemonSet", "Coleta metricas, traces e logs de todos os containers", $sprite="img:https://icon.icepanel.io/AWS/svg/Management-Governance/CloudWatch.svg")
        Container(dd_apm, "APM Tracer", "dd-trace-go", "Distributed tracing com auto-instrumentacao")
        Container(dd_logs, "Log Forwarder", "Datadog Agent", "Coleta e envia logs para Datadog Log Management")
    }

    System_Ext(BACEN_MED, "BACEN MED", "API MED do Banco Central para devolucoes especiais")
    System_Ext(PSP_Recebedor, "PSP Recebedor", "PSP que recebeu o PIX objeto de devolucao")
    System_Ext(ory_hydra, "Ory Hydra", "OAuth 2.0 & OpenID Connect Server (FAPI)")
    System_Ext(datadog_platform, "Datadog Platform", "SaaS: APM, Logs, Metrics, Dashboards, Alerts")

    Rel(Vitima, ory_oathkeeper, "Acessa via proxy", "HTTPS")
    Rel(ory_oathkeeper, ory_kratos, "Valida session", "HTTPS")
    Rel(ory_oathkeeper, PIX_MED_svc, "Roteia autenticado", "HTTPS")
    Rel(PIX_MED_svc, ory_keto, "Verifica permissao", "gRPC")
    Rel(PIX_MED_svc, opa_sidecar, "Avalia policy", "localhost:8181")
    Rel(ory_kratos, ory_hydra, "Emite tokens OAuth2", "HTTPS")
    Rel(ory_kratos, identity_db, "Persiste identidades", "Aurora PostgreSQL")
    Rel(ory_keto, keto_db, "Persiste relation tuples", "Aurora PostgreSQL")
    Rel(PIX_MED_svc, dd_apm, "Envia traces", "localhost:8126")
    Rel(PIX_MED_svc, dd_agent, "Envia metricas", "localhost:8125/DogStatsD")
    Rel(dd_agent, datadog_platform, "Forwarda telemetria", "HTTPS")
    Rel(dd_logs, datadog_platform, "Forwarda logs", "HTTPS")
    Rel(PIX_MED_svc, main_q, "Publica mensagens", "SQS")
    Rel(main_q, scatter_gather_proc, "Consome e processa", "Async")
    Rel(scatter_gather_proc, pattern_q, "Roteia para canal", "SNS")
    Rel(scatter_gather_proc, main_db, "Persiste resultado", "Aurora PostgreSQL")
    Rel(PIX_MED_svc, cache, "Consulta cache", "ElastiCache Redis")
    Rel(PIX_MED_svc, BACEN_MED, "Integra com", "HTTPS/mTLS")

