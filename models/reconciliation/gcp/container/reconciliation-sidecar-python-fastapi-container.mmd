    Person(Analista_Conciliacao, "Analista Conciliacao", "Analista de reconciliacao")

    Container_Boundary(cb0, "Reconciliation Platform") {
        Container(Reconciliation_svc, "Reconciliation Service", "FastAPI", "Servico principal rodando em Cloud Run", $sprite="img:https://icon.icepanel.io/GCP/svg/Compute/Cloud-Run.svg")
